<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="ade25.sitecontent">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">

        <div class="app-page-header app-page__header">
            <div class="app-page__title">
                <h1 class="app-page__headline">
                        ${context/Title}
                </h1>
            </div>
            <p class="app-page__abstract" tal:condition="context/Description">
                    ${context/Description}
            </p>
        </div>
        <div class="app-page-body">

            <tal:gallery tal:condition="view/display_gallery">
                <div tal:replace="structure view/rendered_gallery" />
            </tal:gallery>

            <tal:nogallery tal:condition="not:view/display_gallery">
                <div class="app-page-leadimage" tal:condition="view/has_leadimage">
                    <div class="app-page__asset"
                             tal:define="responsive_image python:context.restrictedTraverse('@@figure')(image_field_name='image', caption_field_name='image_caption', scale='default', lqip=True, lazy_load=True)">
                        <span tal:replace="structure responsive_image" />
                    </div>
                </div>
            </tal:nogallery>

            <div class="app-page-text" id="parent-fieldname-text"
                     tal:condition="context/text"
                     tal:content="structure context/text/output" />

            <div class="app-page-cards" tal:condition="view/display_cards">
                <div class="app-cards app-card-gutter app-cards-page-previews" tal:condition="view/has_contained_pages">
                    <tal:block tal:repeat="content_page view/contained_pages">
                        <div tal:define="page_uid content_page/UID;
                                         content_card python:context.restrictedTraverse('@@content-widget-context-card')(widget_data=dict(uuid=page_uid))">
                            <span tal:replace="structure content_card" />
                        </div>
                    </tal:block>

                </div>
            </div>

        </div>

    </metal:content-core>
</metal:main>

</body>
</html>

