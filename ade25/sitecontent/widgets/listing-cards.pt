<div class="app-widget app-widget--listing app-widget__listing app-widget__listing--cards app-widget--${context/UID}"
         i18n:domain="ade25.sitecontent" tal:condition="python:view.has_content">
    <div class="app-widget__header app-widget__header--listing-cards">
        <div class="app-widget__title" i18n:translate="">
            Content Cards
        </div>
    </div>
    <div class="app-widget__content">
        <div class="app-widget__main" tal:define="items python:view.content_items">
            <div class="o-card-list o-card-list--${context/UID} js-widget--gallery">
                <tal:items tal:repeat="item items">
                    <div class="o-card-list__item o-card-list__item--width-33" tal:define="item_uuid python:item['uuid'];"
                        tal:attributes="class python:'o-card-list__item o-card-list__item--width-33 ' + item['css_classes']">
                        <div tal:replace="structure python:context.restrictedTraverse('@@content-widget-context-card')(widget_data=dict(uuid=item_uuid))">
                            Content Preview Card
                        </div>
                    </div>
                </tal:items>
            </div>
        </div>
        <div class="app-widget__footer">
        </div>
    </div>
</div>